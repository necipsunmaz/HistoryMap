@model HistoryMap.Models.Login
@{
        ViewData["Title"] = "Admin Page Login";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/css/material-design-font.css" rel="stylesheet" />
    <script src="~/js/page-loader.min.js"></script>
</head>
<body>
    <!-- Page Loader -->
    <div id="page-loader">
        <div class="preloader preloader--xl preloader--light">
            <svg viewBox="25 25 50 50">
                <circle cx="50" cy="50" r="20" />
            </svg>
        </div>
    </div>

    <div class="login">
        <!-- Login -->
        <div class="login__block toggled" id="l-login">
            <div class="login__block__header">
                <i class="zmdi zmdi-account-circle"></i>
                Please Sign in!
            </div>
            <div class="login__block__body">
                <form asp-controller="Admin" asp-action="Index" asp-route-returnurl="@ViewData[" "]" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input asp-for="UserName" class="form-control input-validation-error" data-val="true"
                               data-val-required="The UserName field is required." id="UserName" name="UserName" />
                        <span aps-validation-for="UserName" class="text-danger field-validation-error"
                              style="font-size: xx-small; position: absolute; margin-left: -60px;  bottom: -18px;"
                              data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                        <label>User Name</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input asp-for="Password" class="form-control input-validation-error" data-val="true"
                               data-val-required="The Password field is required." id="Password" name="Password" />
                        <span aps-validation-for="Password" class="text-danger field-validation-error"
                              style="font-size: xx-small; position: absolute; margin-left: -60px;  bottom: -18px;"
                              data-valmsg-for="Password" data-valmsg-replace="true"></span>
                        <label>Password</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <button class="btn btn--light btn--icon m-t-15"><i class="zmdi zmdi-long-arrow-right"></i></button>
                </form>
            </div>
        </div>
    </div>

</body>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

        <script src="~/js/admin.min.js"></script>

    }
