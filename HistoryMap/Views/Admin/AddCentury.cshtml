@model CenturyViewModel
@{
    ViewData["Title"] = "AddCentury";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div class="card">
    <div class="card__header">
        <h2>Add Century <small>You can upload the file map.</small></h2>


        <div class="row">
                <div class="col-sm-4">
                    <p>Select Map</p>

                    @using (Html.BeginForm("AddCentury", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(a => a.Centuries, new { @class = "form-control", @placeholder = "Century Number(Ex: 21)" })
                            @Html.ValidationMessageFor(a => a.Centuries)
                        </div>
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                <span class="btn btn-default btn-file">
                                    <span class="fileinput-new">Select file</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="hidden" value="" name="..."><input type="file" name="Data" id="Data">
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="fileinput__close fileinput-exists" data-dismiss="fileinput">
                                    <i class="zmdi zmdi-close-circle"></i>
                                </a>
                            </div>

                            <input type="submit" class="btn btn-default" style="float:right;" value="Save" />
                    }

                </div>
            </div>

        <div class="col-sm-2 col-xs-6">
            <a href="#" class="btn btn-success" data-type="success">Success</a>
        </div>
    </div>
</div>

@section Scripts{
        <script src="~/lib/remarkable-bootstrap-notify/bootstrap-notify.min.js"></script>
        <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
        <script src="~/js/Admin/misc.js"></script>
}


